<h1>Adopt Don't Shop Shelters</h1>
<%= link_to 'Sort by # Pets', '/shelters?sort=pets' %>
<%= link_to 'Sort Alphabetically', '/shelters?sort=alpha' %>
<ul>
<% @shelters.each do |shelter| %>
  <li><a href="/shelters/<%= shelter.id %>"><%= shelter.name %><a> - (<%= link_to "Edit Shelter", edit_shelter_path(shelter) %>)/(<%= link_to "Delete", "/shelters/#{shelter.id}", method: "delete" %>)</li>
<% end %>
</ul>
<p>Suggest a <a href="/shelters/new">New Shelter</a></p>
