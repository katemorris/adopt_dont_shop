<% content_for :title, "About #{@shelter.name}" %>
<section>
  <h2><%= @shelter.name %></h2>
  <%= link_to "View Pets", shelter_pets_path(@shelter) %>
  <p>Address:<br />
  <%= @shelter.address %><br />
  <%= @shelter.city %>, <%= @shelter.state %> <%= @shelter.zip %>
